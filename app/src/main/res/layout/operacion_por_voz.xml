<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".operaciones.OperacionPorVoz">


    <TextView
        android:id="@+id/atami"
        android:layout_width="415dp"
        android:layout_height="62dp"
        android:background="@color/darkRed"
        android:fontFamily="@font/rhodium_libre"
        android:includeFontPadding="false"
        android:text="Atami"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_micro"
        android:layout_width="180dp"
        android:layout_height="185dp"
        android:adjustViewBounds="true"
        android:background="@drawable/hoover_button_mic"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:src="@drawable/ic_micro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atami"
        app:layout_constraintVertical_bias="0.465"
        app:srcCompat="@drawable/ic_micro" />

    <Button
        android:id="@+id/infoCategorias"
        android:layout_width="186dp"
        android:layout_height="43dp"
        android:background="@color/darkRed"
        android:text="TUTORIAL Y CATEGORIAS"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button_micro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atami"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/info1"
        android:layout_width="355dp"
        android:layout_height="100dp"
        android:fontFamily="@font/rhodium_libre"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="Recuerda: \n' Quiero añadir / retirar X € \nen la  categoria X '"
        android:textColor="@color/darkRed"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atami"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/infoMensaje"
        android:layout_width="354dp"
        android:layout_height="112dp"
        android:fontFamily="@font/rhodium_libre"
        android:gravity="center"

        android:includeFontPadding="true"
        android:textColor="@color/darkRed"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info1"
        app:layout_constraintVertical_bias="0.62" />

    <TextView
        android:id="@+id/errorMensaje"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:fontFamily="@font/rhodium_libre"
        android:gravity="center"
        android:includeFontPadding="true"
        android:textColor="@color/darkRed"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info1"
        app:layout_constraintVertical_bias="0.957" />

</androidx.constraintlayout.widget.ConstraintLayout><!--
      -->