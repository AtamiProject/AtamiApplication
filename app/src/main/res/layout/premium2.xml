<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".premium.Premium">

    <TextView
        android:id="@+id/tv"
        android:layout_width="314dp"
        android:layout_height="380dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="25dp"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="8sp"
        android:text="@string/agradecimiento"
        android:textColor="@color/darkRed"
        android:textSize="16dp"
        android:justificationMode="inter_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw1"
        app:layout_constraintVertical_bias="0.46" />

    <TextView
        android:id="@+id/tw1"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="8sp"
        android:text="@string/graciasPremium"
        android:textColor="@color/darkRed"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atami3" />

    <TextView
        android:id="@+id/atami3"
        android:layout_width="415dp"
        android:layout_height="62dp"
        android:background="@color/darkRed"
        android:fontFamily="@font/rhodium_libre"
        android:includeFontPadding="false"
        android:text="Atami"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>